<h1>New game</h1>
<div id="container">
  <% @letters.each do |letter| %>
    <div class="letter"><%= letter %></div>
  <% end %>
</div>
<p id="question">What is the longest word you can find?</p>
<div id="form-container">
  <form class="InputAddOn" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input class="InputAddOn-field" id="input" type="text" name="guess">
    <input class="InputAddOn-item" id="button" type="submit" value="Play">
    <input id="token" name="token" type="hidden" value="<%= @letters %>" />
  </form>
</div>
